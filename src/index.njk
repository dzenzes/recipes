<ul class="postlist">
    {% for recipe in collections.recipes %}
        <li
    class="postlist-item{% if recipe.url == url %} postlist-item-active{% endif %}"
  >
            <a href="{{ recipe.url | url }}" class="postlist-link">
                {% if recipe.data.title %}
                    {{ recipe.data.title }}
                {% else %}
                    <code>{{ recipe.url }}</code>
                {% endif %}
            </a>
            <time
      class="postlist-date"
      datetime="{{
        recipe.date
          .toLocaleDateString('de-DE', {
            year: 'numeric',
            month: 'numeric',
            day: '2-digit'
          })
          .split('/')
          .reverse()
          .join('-')
      }}"
    >
                {{
        recipe.date.toLocaleDateString('de-DE', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })
      }}
            </time>

            {% for tag in tags %}
                {%- if tag != "posts" -%}
                    {% set
                    tagUrl %}/tags/{{ tag }}/{% endset %}

                    <a href="#" class="post-tag">{{ tag | formatTag }}</a>
                {%- endif -%}
                {%- if not loop.last %}, {% endif %}
            {% endfor %}

        </li>
    {% endfor %}
</ul>