---
layout: layouts/base.njk
---

<h1>{{ title }}</h1>

{% if note %}
    <p>{{note}}</p>
{% endif %}

<div>
    {% for tag in tags -%}
        <a class="inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 no-underline bg-gray-200 rounded-full hover:bg-gray-300" href="{{ tag | tagUrl('recipe' )| url }}">#{{ tag | formatTag }}</a>
    {%- endfor %}
</div>

<section>
    <h2>Zutaten:</h2>
    <ul>
        {% for item in ingredients %}
            <li>{% ingredient item %}</li>
        {% endfor %}
    </ul>
</section>

<section>
    <h2>Utensilien:</h2>
    <ul>
        {% for item in cookware %}
            <li>
                {{ item.name }}
            </li>
        {% endfor %}
    </ul>
</section>

<section>
    <h2>Anleitung</h2>
    <ul>
        {% for step in steps %}
            <li>
                {%- for item in step -%}
                    {{ item | safe }}
                {%- endfor -%}
            </li>
        {% endfor %}
    </ul>
</section>
{% if source %}
    <p>
    Quelle: <a href="{{source}}" title="Quelle zum Rezept '{{title}}'">{{source}}</a>
    </p>
{% endif %}
