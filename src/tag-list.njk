---
layout: layouts/base.njk
permalink: /tags/
---
<h1>Tags</h1>

{% for tag in collections.tagList %}
    {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
    <a class="inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 no-underline bg-gray-200 rounded-full hover:bg-gray-300" href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>

{% endfor %}